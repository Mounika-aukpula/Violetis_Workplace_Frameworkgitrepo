<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <!-- ðŸŽ¯ Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- ðŸ“œ Rolling File Appender -->
        <RollingFile name="FileAppender"
                     fileName="logs/test-execution.log"
                     filePattern="logs/test-execution-%d{yyyy-MM-dd-HH-mm-ss}.log.gz">

            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>

            <Policies>
                <!-- Rotate daily -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Or when file exceeds 10MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

            <!-- Keep only last 10 log files -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        <!-- ðŸ§± Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>

        <!-- ðŸ“„ Page Object Logs -->
        <Logger name="pages" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- ðŸ§ª Test Logs -->
        <Logger name="tests" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- âš™ï¸ Utility Logs -->
        <Logger name="utils" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>
        <!-- Suppress noisy external library logs -->
		<Logger name="org.testng" level="error" additivity="false">
    		<AppenderRef ref="Console"/>
		</Logger>

		<Logger name="io.github.bonigarcia.wdm" level="warn" additivity="false">
    		<AppenderRef ref="Console"/>
		</Logger>

		<Logger name="org.openqa.selenium" level="warn" additivity="false">
    		<AppenderRef ref="Console"/>
		</Logger>
    </Loggers>
</Configuration>
